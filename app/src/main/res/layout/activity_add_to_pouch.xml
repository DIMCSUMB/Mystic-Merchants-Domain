<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddToPouchActivity">

    <TextView
        android:id="@+id/pouch_textview_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/pouch_edittext_Quantity"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:hint="Enter Quantity"
        android:inputType="number"
        android:layout_below="@+id/pouch_textview_Name"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/pouch_button_Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Pouch"
        android:layout_below="@id/pouch_edittext_Quantity"
        android:layout_centerHorizontal="true" />

</RelativeLayout>