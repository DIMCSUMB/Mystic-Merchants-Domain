<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingPage">

    <TextView
        android:id="@+id/landing_textview_Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome _____!"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="128dp"/>

    <Button
        android:id="@+id/landing_button_Items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Items"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/landing_textview_Welcome"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="100dp"/>

    <Button
        android:id="@+id/landing_button_currentPouches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Pouches"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/landing_button_Items"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="100dp"/>

    <Button
        android:id="@+id/landing_button_oldPouches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Old Pouches"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/landing_button_currentPouches"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="100dp"/>

    <Button
        android:id="@+id/landing_button_Logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/landing_button_oldPouches"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="100dp"/>

    <Button
        android:id="@+id/landing_button_Admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Settings"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/landing_button_Logout"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>