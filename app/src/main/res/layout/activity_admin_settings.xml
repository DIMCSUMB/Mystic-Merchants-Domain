<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminSettingsActivity">

    <TextView
        android:id="@+id/admin_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Settings"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="128dp"/>

    <Button
        android:id="@+id/admin_button_addItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Items"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/admin_textView"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="100dp"/>

    <Button
        android:id="@+id/admin_button_modifyItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modify Items"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/admin_button_addItems"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="100dp"/>

    <Button
        android:id="@+id/admin_button_deleteUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete a User"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/admin_button_modifyItems"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>